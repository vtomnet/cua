{
  "name": "whisper-feature-extractor",
  "version": "0.0.1",
  "description": "TypeScript implementation of transformers' WhisperFeatureExtractor",
  "main": "dist/index.js",
  "module": "src/index.ts",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "bun build src/index.ts --outdir=dist --format=esm --target=node && bun run build:types",
    "build:types": "tsc --project tsconfig.build.json",
    "dev": "bun build src/index.ts --watch --outdir=dist --format=esm --target=node",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "clean": "rm -rf dist"
  },
  "files": [
    "dist/**/*",
    "src/**/*",
    "README.md"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
